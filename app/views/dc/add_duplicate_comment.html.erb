<form action="/resolve_duplicate" method="get">
 	<input name="id" type="hidden" value="<%= params[:id]%>">
 	<input type="hidden" name="decision" value="<%=params[:decision]%>">
 	<input type="hidden" name="next_path" value="<%= params[:next_path]%>">
	<fieldset>
		 <legend><font size='5' style='border: 2px;'><%= @reason %></font></legend>
		 <div class="field">
		 		<label for="reason">Reason record is <%=params[:decision]%></label>
		 		<input id="reason" name="reason">
		 </div>
	</fieldset>
</form>
<script type="text/javascript">
	init();
	$("#reason").css("height : 300px;")
</script>