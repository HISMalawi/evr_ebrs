<style>
  .count{
      color: black;
      font-size: 13px;
      font-weight: bold;
  }
</style>
<script type="text/javascript" src="/assets/showSubMenu.js"></script>

<div id="default" style="width: 100%; height: 400px; text-align: center; vertical-align: top;">
  <% if @folders.include?("Marked as pending")%>
    <div class="button child_menu manage_cases" onclick="window.location = '/view_pending_cases'" tag=0 title="View Pending Cases">
      <table style="text-align: left;">
        <tr>
          <td rowspan="2">
            <img src="<%= @icoFolder %>" height="60"/>  <br />
            <span class="count"></span>
          </td>
          <td style="height: 30px;">
            Marked as pending
          </td>
        </tr>
        <tr>
          <td style="font-size: 11px; font-style: italic;">
            View records that are pending at DC.
          </td>
        </tr>
      </table>
    </div>
  <% end %>

  <% if @folders.include?("Rejected by ADR")%>
    <div class="button child_menu manage_cases" onclick="window.location = '/view_rejected_cases'" tag=0 title="View Rejected Cases">
      <table style="text-align: left;">
        <tr>
          <td rowspan="2">
            <img src="<%= @icoFolder %>" height="60"/>  <br />
            <span class="count"></span>
          </td>
          <td style="height: 30px;">
            Rejected by ADR
          </td>
        </tr>
        <tr>
          <td style="font-size: 11px; font-style: italic;">
            Records Rejected by ADR
          </td>
        </tr>
      </table>
    </div>
 <% end %>

</div>