    function handleDate(date){

        ele = date.split('/');

        if (date.match(/\W?/i)) {
            if (ele[1] == '?') {
                ele[0] = "1";
                ele[1] = "07";
            }
            else if (ele[0] == '?') {
                ele[1] = parseInt(monthNames[ele[1]]) + 1;
                ele[1] = (ele[1] < 10 ? "0" + ele[1] : ele[1])
                ele[0] = "15"
            }
        }
        else {
            ele[1] = parseInt(monthNames[ele[1]]);
            ele[1] = ele[1] + 1

            if (ele[1] < 10){
                ele[1] = "0" + ele[1];
            }
        }
        return new Date(ele[1] + "/" + ele[0] + "/" + ele[2]);

    }
    
