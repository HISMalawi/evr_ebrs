<style type="text/css">
    #table{
      width: 100%;
      margin: auto;
      border-collapse: collapse;
    }
    #table th {
      padding: 1%;
      font-size: 0.7em;
      border: 1px solid #bdbfc2;
      width: 50%;
      padding-left: 5%;
    }
    #table td {
      padding: 1%;
      font-size: 0.7em;
      border: 1px solid #bdbfc2;
      width: 50%;
      color: #646464;
      padding-left: 5%;
    }
    #table tr:nth-child(even) {
      background: #eff0f2;
    }

    #table tr:hover {
      color:#3465a4;
    }

</style>
<div style="display: table; width: 100%; border-spacing: 20px; color: #3465a4; font-size: 32px; margin-top: 50px;">
  <div style="width:15%;float:left;margin-right:5%">
      <img src="/assets/user-png.png" style="width:80%;margin-left:15%">
  </div>
  <div style="width:75%;float:right;margin-left:5%;">
    <table id="table">
        <tr><th colspan="3" style="background:#366391;color:#ffffff">User details</th></tr>
        <tr><td>Username</td><td><%= @user.username %></td></tr>
        <tr><td>Name</td><td><%= @user.first_name %> <%= @user.last_name %></td></tr>
        <tr><td>Role</td><td><%= @user.user_role.role.role %></td></tr>
        <tr><td>Status</td><td><%= @user.active == 1? 'ACTIVE' : 'BLOCKED' %></td></tr>
        <tr><td>Keyboard</td><td><%= @user.preferred_keyboard%> </td></tr>
        <tr><td>Created at</td><td><%= @user.created_at.to_date.strftime("%d/%b/%Y")%> </td></tr>
        <tr><td>Updated at</td><td><%= @user.updated_at.to_date.strftime("%d/%b/%Y")%> </td></tr>
    </table>
  </div>
 

</div>
<button id="btnAction" class="blue" onclick="window.location = '/users/change_keyboard?id=<%=@user.id%>'"
        style="position: absolute; right: 450px; bottom: 20px;">Change Keyboard</button>

<button id="btnAction" class="blue" onclick="window.location = '/users/change_password';"
        style="position: absolute; right: 160px; bottom: 20px;">Change Password</button>

